{
	"compilerOptions": {
	  "target": "ES6",
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "baseUrl": ".",             
	  "allowJs": true,
	  "noImplicitAny": true,
	  "strictNullChecks": true,
	  "importHelpers": true,
	  "isolatedModules": true,
	  "inlineSourceMap": true,
	  "inlineSources": true,
	  "lib": ["DOM", "ES6", "ES7"]
	},
	"include": [
	  "main.ts",
	  "src/**/*.ts"
	]
  }
  